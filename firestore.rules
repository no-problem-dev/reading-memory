rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // ユーザーが認証されているかチェック
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // リクエストしているユーザーが対象のユーザーかチェック
    function isUser(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // usersコレクション
    match /users/{userId} {
      allow read: if isUser(userId);
      allow create: if isUser(userId);
      allow update: if isUser(userId);
      allow delete: if false; // Cloud Functions経由でのみ削除可能
    }
    
    // userProfilesコレクション
    match /userProfiles/{userId} {
      allow read: if isUser(userId) || (isAuthenticated() && resource.data.isPublic == true);
      allow create: if isUser(userId);
      allow update: if isUser(userId);
      allow delete: if false; // Cloud Functions経由でのみ削除可能
    }
    
    // booksコレクション（公開本）
    match /books/{bookId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.resource.data.visibility == 'public';
      allow update: if false; // 公開後の編集は不可
      allow delete: if false; // 削除不可
    }
    
    // userBooksコレクション
    match /users/{userId}/userBooks/{userBookId} {
      allow read: if isUser(userId);
      allow create: if isUser(userId);
      allow update: if isUser(userId);
      allow delete: if isUser(userId);
      
      // chatsサブコレクション
      match /chats/{chatId} {
        allow read: if isUser(userId);
        allow create: if isUser(userId);
        allow update: if isUser(userId);
        allow delete: if isUser(userId);
      }
    }
    
    // goalsコレクション
    match /users/{userId}/goals/{goalId} {
      allow read: if isUser(userId);
      allow create: if isUser(userId);
      allow update: if isUser(userId);
      allow delete: if isUser(userId);
    }
    
    // activitiesコレクション
    match /users/{userId}/activities/{activityId} {
      allow read: if isUser(userId);
      allow create: if isUser(userId);
      allow update: if isUser(userId);
      allow delete: if isUser(userId);
    }
    
    // achievementsコレクション
    match /users/{userId}/achievements/{achievementId} {
      allow read: if isUser(userId);
      allow create: if isUser(userId);
      allow update: if isUser(userId);
      allow delete: if isUser(userId);
    }
    
    // streaksコレクション
    match /users/{userId}/streaks/{streakId} {
      allow read: if isUser(userId);
      allow create: if isUser(userId);
      allow update: if isUser(userId);
      allow delete: if isUser(userId);
    }
  }
}