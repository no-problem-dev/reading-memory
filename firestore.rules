rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // ユーザーが認証されているかチェック
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // リクエストしているユーザーが対象のユーザーかチェック
    function isUser(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // usersコレクション
    match /users/{userId} {
      allow read: if isUser(userId);
      allow create: if isUser(userId);
      allow update: if isUser(userId);
      allow delete: if false; // Cloud Functions経由でのみ削除可能
    }
    
    // userProfilesコレクション
    match /userProfiles/{userId} {
      allow read: if isUser(userId);
      allow create: if isUser(userId);
      allow update: if isUser(userId);
      allow delete: if false; // Cloud Functions経由でのみ削除可能
    }
    
    // booksコレクション（ユーザーごとの本）
    match /users/{userId}/books/{bookId} {
      allow read: if isUser(userId);
      allow create: if isUser(userId);
      allow update: if isUser(userId);
      allow delete: if isUser(userId);
      
      // chatsサブコレクション
      match /chats/{chatId} {
        allow read: if isUser(userId);
        allow create: if isUser(userId);
        allow update: if isUser(userId);
        allow delete: if isUser(userId);
      }
    }
    
    // goalsコレクション
    match /users/{userId}/goals/{goalId} {
      allow read: if isUser(userId);
      allow create: if isUser(userId);
      allow update: if isUser(userId);
      allow delete: if isUser(userId);
    }
    
    // activitiesコレクション
    match /users/{userId}/activities/{activityId} {
      allow read: if isUser(userId);
      allow create: if isUser(userId);
      allow update: if isUser(userId);
      allow delete: if isUser(userId);
    }
    
    // achievementsコレクション
    match /users/{userId}/achievements/{achievementId} {
      allow read: if isUser(userId);
      allow create: if isUser(userId);
      allow update: if isUser(userId);
      allow delete: if isUser(userId);
    }
    
    // streaksコレクション
    match /users/{userId}/streaks/{streakId} {
      allow read: if isUser(userId);
      allow create: if isUser(userId);
      allow update: if isUser(userId);
      allow delete: if isUser(userId);
    }
    
    // imagesコレクション（画像メタデータ）
    match /images/{imageId} {
      // 読み取り：アップロードしたユーザーのみ
      allow read: if isAuthenticated() && 
        request.auth.uid == resource.data.uploadedBy;
      
      // 作成：認証されたユーザー（APIサーバー経由）
      allow create: if isAuthenticated() && 
        request.auth.uid == request.resource.data.uploadedBy &&
        request.resource.data.keys().hasAll(['uploadedBy', 'storagePath', 'url', 'contentType', 'size', 'createdAt', 'updatedAt']);
      
      // 更新：不可（イミュータブル）
      allow update: if false;
      
      // 削除：アップロードしたユーザーのみ（APIサーバー経由）
      allow delete: if isAuthenticated() && 
        request.auth.uid == resource.data.uploadedBy;
    }
  }
}